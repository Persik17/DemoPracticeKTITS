<Page x:Class="ParfumeryProj.Pages.LoginPages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParfumeryProj.Pages.LoginPages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="AuthPage">

    <StackPanel VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Логин:" Width="250"/>
            <TextBox x:Name="LoginTb" Width="250"/>
            <TextBlock Text="Пароль:" Width="250"/>
            <PasswordBox x:Name="PasswordTb" Width="250"/>
            <TextBlock Text="Капча:" Width="250"/>
            <Border BorderBrush="Black" Width="250" BorderThickness="2" Margin="5">
                <StackPanel HorizontalAlignment="Center" Grid.Row="1" x:Name="CapchaSp" Orientation="Horizontal">
                </StackPanel>
            </Border>
            <TextBox x:Name="CapchaTb" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="LogInBtn" Content="Войти" Click="LogInBtn_Click" Margin="5"/>
            <Button x:Name="ReviewBtn" Content="Просмотр" Click="ReviewBtn_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Page>
